{# @var \modules\store\models\CartModel cartModel #}
{# @var bool isGuest #}

{% extends '_layouts/Master.twig' %}

{% block content %}
    <div class="Cart">
        <div class="Cart__Inner">
            <div class="Cart__Checkout">
                <div class="Cart__CheckoutInner">
                    {% if isGuest %}
                        <div class="Cart__CheckoutLogIn">
                            <div class="Cart__CheckoutLogInInner">
                                {% include '_partials/LogInForm.twig' with {
                                    redirectUrl: '/cart'
                                } %}
                            </div>
                        </div>
                    {% else %}
                        <form action="#TODO" class="CheckoutForm JSCheckoutForm">
                            <section class="CheckoutForm__Section">
                                <h2 class="CheckoutForm__SectionHeader">Billing</h2>
                                <div class="CheckoutForm__LabelGroupWrapper CheckoutForm__LabelGroupWrapper--Dual">
                                    <label class="label CheckoutForm__Label CheckoutForm__Label--Required">
                                        Phone Number
                                        <input
                                            type="text"
                                            name="phoneNumber"
                                            class="input CheckoutForm__Input"
                                            placeholder="i.e. 123-555-1212"
                                            required
                                        >
                                    </label>
                                    <label class="label CheckoutForm__Label CheckoutForm__Label--Required">
                                        Country
                                        <select name="country" class="select CheckoutForm__Select JSCheckoutForm__CountryInput" required>
                                            <option value="" disabled selected>Select Country...</option>
                                            {% for country in countries().all() %}
                                                <option
                                                    value="{{ country.alpha2 }}"
                                                    {# TODO: set selected correctly #}
                                                    {% if country.alpha2 == 'US' %}
                                                    selected
                                                    {% endif %}
                                                >
                                                    {{ country.name }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </label>
                                </div>
                                <div class="CheckoutForm__LabelGroupWrapper CheckoutForm__LabelGroupWrapper--Dual">
                                    <label class="label CheckoutForm__Label CheckoutForm__Label--Required">
                                        Full Name
                                        <input
                                            type="text"
                                            name="name"
                                            class="input CheckoutForm__Input"
                                            placeholder="i.e. John Smith"
                                            required
                                        >
                                    </label>
                                    <label class="label CheckoutForm__Label">
                                        Company
                                        <input
                                            type="text"
                                            name="company"
                                            class="input CheckoutForm__Input"
                                            placeholder="i.e. BuzzingPixel, LLC"
                                        >
                                    </label>
                                </div>
                                <label class="label CheckoutForm__Label CheckoutForm__Label--Required">
                                    Address
                                    <input
                                        type="text"
                                        name="address"
                                        class="input CheckoutForm__Input"
                                        placeholder="i.e. 123 Some Street"
                                        required
                                    >
                                </label>
                                <label class="label CheckoutForm__Label">
                                    Address Line 2
                                    <input
                                        type="text"
                                        name="addressContinued"
                                        class="input CheckoutForm__Input"
                                        placeholder="i.e. Suite 201"
                                    >
                                </label>
                                <label class="label CheckoutForm__Label CheckoutForm__Label--Required">
                                    City
                                    <input
                                        type="text"
                                        name="city"
                                        class="input CheckoutForm__Input"
                                        placeholder="i.e. Metropolis"
                                        required
                                    >
                                </label>
                                <div class="CheckoutForm__LabelGroupWrapper CheckoutForm__LabelGroupWrapper--Dual">
                                    {% include '_partials/CheckoutStateSelect.twig' only %}
                                    <label class="label CheckoutForm__Label CheckoutForm__Label--Required">
                                        Postal Code
                                        <input
                                            type="text"
                                            name="postalCode"
                                            class="input CheckoutForm__Input"
                                            placeholder="i.e. 12345"
                                            required
                                        >
                                    </label>
                                </div>
                                <label class="label CheckoutForm__Label CheckoutForm__Label--AlignRight">
                                    Save Billing Info?
                                    <input name="updateAccountInfo" type="checkbox">
                                </label>
                            </section>
                            <section class="CheckoutForm__Section">
                                <h2 class="CheckoutForm__SectionHeader">Payment</h2>
                                <div class="CheckoutForm__LabelGroupWrapper CheckoutForm__LabelGroupWrapper--Dual">
                                    <label class="label CheckoutForm__Label CheckoutForm__Label--Required CheckoutForm__Label--TwoThirds">
                                        Credit Card Number
                                        <input
                                            type="text"
                                            name="cardNumber"
                                            class="input CheckoutForm__Input JSCreditCardNumber"
                                            placeholder="i.e. 5530 8628 8440 9534"
                                            required
                                        >
                                    </label>
                                    <label class="label CheckoutForm__Label CheckoutForm__Label--Required CheckoutForm__Label--OneThird">
                                        CVC
                                        <input
                                            type="text"
                                            name="cvc"
                                            class="input CheckoutForm__Input "
                                            placeholder="i.e. 543"
                                            required
                                        >
                                    </label>
                                </div>
                                <label class="label CheckoutForm__Label CheckoutForm__Label--Required">
                                    Expiration
                                    <span class="CheckoutForm__LabelGroupWrapper CheckoutForm__LabelGroupWrapper--Dual">
                                        <select name="expireMonth" class="select CheckoutForm__Select" required>
                                            <option value="" disabled selected>Select Month...</option>
                                            {% for month in months() %}
                                                <option value="{{ month.numeric }}">{{ month.name }}</option>
                                            {% endfor %}
                                        </select>
                                        <select class="select CheckoutForm__Select" required>
                                            <option name="expireYear" value="" disabled selected>Select Year...</option>
                                            {% for year in years() %}
                                                <option value="{{ year }}">{{ year }}</option>
                                            {% endfor %}
                                        </select>
                                    </span>
                                </label>
                                <label class="label CheckoutForm__Label CheckoutForm__Label--PaySubmit">
                                    <input class="button CheckoutForm__PaySubmit" type="submit" value="Pay $95.99">
                                </label>
                            </section>
                        </form>
                    {% endif %}
                </div>
            </div>
            <div class="Cart__SidebarAtDesktop">
                <div class="Cart__TotalsContainer">
                    <ul class="Cart__TotalsList">
                        <li class="Cart__TotalsListItem">
                            <span class="Cart__TotalsListItemTitle">
                                Subtotal
                            </span>
                            <span class="Cart__TotalsListItemValue">
                                $123.09
                            </span>
                        </li>
                        <li class="Cart__TotalsListItem">
                            <span class="Cart__TotalsListItemTitle">
                                Tax
                            </span>
                            <span class="Cart__TotalsListItemValue">
                                $0.00
                            </span>
                        </li>
                        <li class="Cart__TotalsListItem Cart__TotalsListItem--IsEmphasized">
                            <span class="Cart__TotalsListItemTitle">
                                Total
                            </span>
                            <span class="Cart__TotalsListItemValue">
                                $123.00
                            </span>
                        </li>
                    </ul>
                </div>
                <div class="Cart__ItemsContainer">
                    <ul class="Cart__Items">
                        {% for productKey,productModel in cartModel.getProductModels() %}
                            <li class="Cart__Item">
                                <div class="Cart__ItemPrimaryContent">
                                    <a href="{{ productModel.url }}" class="Cart__ItemTitle">
                                        {{ productModel.title|smartypants }}
                                    </a>
                                    <form method="post" accept-charset="UTF-8" class="Cart__ItemMeta">
                                        {{ csrfInput() }}
                                        <input type="hidden" name="action" value="/cart">
                                        <input type="hidden" name="action" value="store/cart-content/update-item">
                                        <input type="hidden" name="productKey" value="{{ productKey }}">
                                        <div class="Cart__ItemMetaPrice">${{ productModel.price|number_format(2) }}</div>
                                        <input type="text" class="input Cart__ItemMetaQtyInput" name="qty" value="{{ productModel.qty }}">
                                        <input class="button Cart__ItemMetaUpdateSubmit" type="submit" value="Update">
                                        <a
                                            href="/cart/remove/{{ productKey }}"
                                            class="button Cart__ItemMetaRemove"
                                        >
                                            X
                                        </a>
                                    </form>
                                </div>
                                {% if productModel.subscriptionPrice > 0 %}
                                    <div class="Cart__ItemSecondaryContent">
                                        Update and support subscription renews {{ productModel.subscriptionFrequency }} at ${{ productModel.subscriptionPrice|number_format(2) }} and can be canceled at any time.
                                    </div>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script type="text/template" id="JSCheckoutForm__StateSelect">
        {% include '_partials/CheckoutStateSelect.twig' only %}
    </script>

    <script type="text/template" id="JSCheckoutForm__StateProvince">
        {% include '_partials/CheckoutStateProvince.twig' only %}
    </script>
{% endblock %}
