.CheckoutForm {
    display: flex;
}

.CheckoutForm__Section {
    margin-bottom: 0;
    padding: 20px;
    position: relative;
}

.CheckoutForm__Section--FirstSection {
    padding-right: 30px;
    width: 60%;
}

.CheckoutForm__Section--FirstSection:after {
    background-color: var(--lighterGray);
    content: ' ';
    display: block;
    height: 100%;
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
}

.CheckoutForm__Section--SecondSection {
    padding-left: 30px;
    width: 40%;
}
